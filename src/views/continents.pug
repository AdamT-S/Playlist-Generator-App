extends layout.pug
include mixins/generic.pug

//- Extra css
block head 
    link(rel="stylesheet", href="/data_content_table.css")
    link(rel="stylesheet", href="/data_content_header.css")

block dataContent
    //- Table content part
    h2 World population: #{dataset[0].worldPopulation}

    table.data_table            
        tr
            th Continent            
            th Number Of Countries            
            th Total Population            
    
        each continent in dataset.sort((c1,c2)=>c2.population-c1.population)
            tr
                td 
                    a(href=`/continents/${continent.name}`) #{continent.name}
                td #{continent.numberOfCountries}
                td #{continent.population}