extends layout.pug

//- Extra css
block head 
    link(rel="stylesheet", href="/data_content_table.css")

block dataContent
    //- Table content part
    table.data_table      
        tr
            th Continent
            th Population
            th In Cities
            th %
            th Out Cities
            th %



        each datum in dataset
            - var inCity = datum.CityContinentPop / datum.ContinentPop * 100
            - var out = datum.ContinentPop - datum.CityContinentPop
            - var outPercent = out / datum.ContinentPop * 100

            if(datum.ContinentPop != 0 && datum.ContinentPop != null && datum.ContinentPop != false)  
                tr
                    td #{datum.Continent}
                    td #{datum.ContinentPop}
                    td #{datum.CityContinentPop}
                    td #{inCity.toFixed(2)}
                
                    td #{out}
                    td #{outPercent.toFixed(2)}
    


    
  
    