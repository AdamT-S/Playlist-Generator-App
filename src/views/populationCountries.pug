extends layout.pug

//- Extra css
block head 
    link(rel="stylesheet", href="/data_content_table.css")

block dataContent
    //- Table content part
    table.data_table      
        tr
            th Region
            th Population
            th In Cities
            th %
            th Out Cities
            th %



        each datum in dataset
            - var coPer = parseFloat(datum.countrysideResidentsPer).toFixed(2)
            - var ciPer = parseFloat(datum.cityResidentsPer).toFixed(2)

            if(datum.population != 0 && datum.population != null && datum.population != false)  
                tr
                    td #{datum.name}
                    td #{datum.population}
                    td #{datum.cityResidents}
                    td #{ciPer}               
                    td #{datum.countrysideResident}
                    td #{coPer}
    


    
  
    